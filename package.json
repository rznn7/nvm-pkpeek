{
	"name": "nvm-pkpeek",
	"version": "0.2.0",
	"description": "Know your globally installed node packages",
	"main": "index.js",
	"type": "module",
	"author": "rznn7",
	"license": "MIT",
	"homepage": "https://github.com/rznn7/nvm-pkpeek#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/rznn7/nvm-pkpeek.git"
	},
	"bugs": {
		"url": "https://github.com/rznn7/nvm-pkpeek/issues"
	},
	"keywords": [
		"nvm",
		"pnpm",
		"node",
		"nodejs",
		"packages",
		"global",
		"cli",
		"version-manager"
	],
	"exclude": [
		"test"
	],
	"scripts": {
		"run": "tsx src/index.ts",
		"build": "tsc",
		"dev": "tsc --watch",
		"typecheck": "tsc --noEmit",
		"lint": "pnpm exec biome lint",
		"format": "pnpm exec biome format",
		"test": "vitest run",
		"test:run": "vitest run",
		"prepublishOnly": "pnpm run build"
	},
	"packageManager": "pnpm@10.17.1",
	"engines": {
		"node": ">=20.0.0"
	},
	"bin": {
		"pkpeek": "./dist/index.js"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.5",
		"@types/node": "^24.7.0",
		"memfs": "^4.49.0",
		"tsx": "^4.20.6",
		"typescript": "^5.9.3",
		"vitest": "^3.2.4"
	},
	"dependencies": {
		"ansis": "^4.2.0",
		"commander": "^14.0.1"
	}
}
