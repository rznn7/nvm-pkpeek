{
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"outDir": "dist",
		"rootDir": "src",
		"strict": true,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"include": ["src"]
}
